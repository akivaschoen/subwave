	div.container
		div.navbar-header.navbar-brand= config.blog.title.toUpperCase ()
		div#navbar.navbar-collapse.collapse
			ul#menu.nav.navbar-nav.navbar-right
				li 
					a(href='/') Home
				li 
					a(href='/archives.html') Archives
